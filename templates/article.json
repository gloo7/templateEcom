{
  "sections": {
    "main": {
      "type": "main-article",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "show_date": false,
            "show_author": false,
            "blog_show_social_sharing": false
          }
        },
        "featured_image": {
          "type": "featured_image",
          "settings": {
            "image_max_width": 1300,
            "aspect_ratio": "landscape"
          }
        },
        "content": {
          "type": "content",
          "settings": {
            "show_pagination": true,
            "blog_show_social_sharing": true,
            "content_max_width": 800
          }
        }
      },
      "block_order": ["title", "featured_image", "content"],
      "settings": {
        "enable_animation": true
      }
    }
  },
  "order": ["main"]
}
